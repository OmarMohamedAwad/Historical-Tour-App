<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
  android:weightSum="5"
    tools:context="com.example.micro.historicaltour.MyTour.MyTourCardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/iconlogo"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <!--linear after logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/myhotels_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"

            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/myhotels_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/myhotels_card_imageview"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layout_weight="1"

                    android:src="@drawable/hotel" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="My Hotels"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:textSize="20dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
<!--finish-->


<!-- start places-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/myplaces_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"

            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/myplaces_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/myplaces_card_imageview"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layout_weight="1"

                    android:src="@drawable/place_image" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="My Places"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:textSize="20dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
<!-- end places -->

    <!--start mytourguide-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/mytourguides_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"

            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/TourGuide_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/TourGuide_card_imageview"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layout_weight="1"

                    android:src="@drawable/tour_guides2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="My TourGuide"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:textSize="20dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <!--finish-->

</LinearLayout>
