<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="#fff">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/place_hotels_Imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rate_textView"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/fourseasons1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_hotels_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:text="Name"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/experinse_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="Location"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/description_hotels_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType=""
                    android:maxLines="1"
                    android:text="Description"
                    android:textColor="#D9A301"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/rate_hotels_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_marginTop="12dp"
                android:text="4.2"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/rate_hotels_textView"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/rate_hotels_textView"
                android:layout_toRightOf="@+id/rate_hotels_textView"
                android:src="@drawable/star" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>